<div class="container-sm d-flex flex-column justify-content-center">
    <!-- フォーマット -->
    <div class="d-flex flex-column justify-content-center mt-3">
      <h3 class="index-label index-label-outputFormat">OUTPUT MODE</h3>

      <div class="wrapper wrapper-select-button">
        <div class="fontSize format-box">
          <div class="format-icon">
            <div>
            <input type="radio" class="radio" id="niconico" name="format" value="niconico" checked/>
